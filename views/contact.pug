extends layouts/interior

block header
  .start 
    img(src='/images/circle.svg') 
    | Contact Drachtio
  h1.caption Have a question? We're here to help.
  
  
block content
  #contact.content: .container.grid-md
    if submitted == false
      form(method="post")
        .form-group
          label.form-label(for='input-example-1') Name
          input#input-example-1.form-input(type='text', name="name", placeholder='John Doe')
          label.form-label(for='input-example-1') Email
          input#input-example-1.form-input(type='text', name="email", placeholder='you@domain.com')
          label.form-label(for='input-example-1') Subject
          input#input-example-1.form-input(type='text', name="subject", placeholder='Subject')
          label.form-label(for='input-example-3') Message
          textarea#input-example-3.form-input(placeholder='How can we help?', name="message", rows='3')
        button.btn.btn-special(type="submit") Submit
    else
      h2 Success!
      p We'll get back to you shortly. 




block scripts
  script.
    var elem = document.querySelector("header");
    var headroom = new Headroom(elem, {
    "offset": 150,
    "tolerance": 5,
    "classes": {
      "initial": "animated",
      "pinned": "slideDown",
      "unpinned": "slideUp"
    }
    });
    headroom.init();
